{
  "output": {
    "log_to_csv": false,
    "print_data": false,
    "file_path": "output/data_log.csv",
    "mqtt_enabled": true
  },
  "mqtt": {
    "broker": "localhost", 
    "port": 1883,
    "topic_prefix": "iot_simulator", 
    "keepalive": 60
  },
  "sensors": [
    {
      "id": "T-001",
      "type": "temperature",
      "min_value": 18.0,
      "max_value": 35.0,
      "unit": "Â°C",
      "interval": 5
    },
    {
      "id": "H-001",
      "type": "humidity",
      "min_value": 30.0,
      "max_value": 80.0,
      "unit": "%",
      "interval": 30
    },
    {
      "id": "V-001",
      "type": "vibration",
      "min_value": 0.5,
      "max_value": 10.0,
      "unit": "mm/s (RMS)",
      "interval": 1.0
    },
    {
        "id": "P-001", 
        "type": "pressure",
        "min_value": 10.0,
        "max_value": 250.0, 
        "unit": "bar", 
        "interval": 1.0
    }
  ]
}
